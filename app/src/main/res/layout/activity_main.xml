<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.energismart.ayudante.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/scrollview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/box1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageApp"
            android:layout_width="wrap_content"
            android:layout_height="46pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:srcCompat="@drawable/ic_app" />


        <ImageView
            android:id="@+id/imageNewTruck"
            android:layout_width="wrap_content"
            android:layout_height="40pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/ic_new_truck" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:id="@+id/Viajes"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageNewTrip"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_marginRight="48pt"
                app:srcCompat="@drawable/ic_new_trip" />

            <ImageView
                android:id="@+id/imageContinueTrip"
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_toRightOf="@+id/imageNewTrip"
                app:srcCompat="@drawable/ic_continue_trip" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/photo_historialShow"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_history_black_48dp" />

        <ImageView
            android:id="@+id/imageLogout"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="40pt"
            app:srcCompat="@drawable/ic_logout" />

    </LinearLayout>

    </ScrollView>

</RelativeLayout>